<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1s.0"/>
    <link rel='stylesheet' href='http://cdn.foundation5.zurb.com/foundation.css' />
    <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <nav id="navbar" class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name">
          <h1>
            <a href="#">
              <i class="fa fa-music"></i>
              <span id="logo-navbar">Social DJ</span>
            </a>
          </h1>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span>menu</span></a></li>
      </ul>

      <section class="top-bar-section">
        <ul class="right">
          <li class="divider"></li>
          <li><a href="/parties">Parties</a></li>
          <li class="divider"></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </section>
    </nav>

    <div id="dashboard" class="row">
      <div id="live-feed" class="large-12 columns">
        <table id="song-table">
          <thead>
            <tr>
              <th> Party Playlist!</th>
            </tr>
          </thead>
          <tbody>
            <!-- Rendering Existing Songs -->
            <% for (var i = 0; i < songs.length; i++) { %>
              <tr data-vote=<%=songs[i].voteCount%>>
                <td id=<%= songs[i].id %> data=<%= songs[i].spotify_id %>>
                  <div class="row song">
                    <div class="large-8 columns">
                      <span class="title"><%= songs[i].song_name %></span><br>
                    </div>
                     <div class="large-4 columns">
                      <div class="votes">
                        <p>+<span class="vote-count"><%= songs[i].voteCount %></span></p>
                      </div>
                    </div>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="//code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <script src="http://cdn.foundation5.zurb.com/foundation.js"></script>
    <script src="/javascripts/playlist.js"></script>

    <script>
      $(document).foundation();
    </script>
  </body>
</html>